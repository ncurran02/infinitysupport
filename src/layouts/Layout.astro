---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Favicon from "../assets/favc.png";
import { ClientRouter } from "astro:transitions";
import "../assets/app.css";

const {
	title = "Home | Infinity Support Services"
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light" transition:animate="fade">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Infinity Support Services is a leading NDIS provider in Werribee, offering a range of mental health and wellbeing services. We are dedicated to providing high-quality support for daily living needs, nursing care, rehabilitation, and therapy support across Melbourne, Tasmania, and Queensland." />
		<meta name="keywords" content="NDIS Provider in Werribee, Mental Health Services in Werribee, Wellbeing Services, STA Housing Melbourne, NDIS Victoria, NDIS Tasmania, NDIS Queensland, Health and Wellness Melbourne, Support for Daily Living Needs in VIC, Nursing Care in Melbourne, Rehabilitation & Therapy Support in Tasmania, Domestic Chores in Melbourne, Domestic Home Care in Melbourne, Psychosocial Recovery Coaching in VIC, Aged Care Services in Victoria, Home Care Services Victoria, Flexible Care Services Victoria, Aged Care Services in Melbourne, Home Care Services in Melbourne, Specialized Disability Supports Werribee." />
		<link rel="icon" type="image/svg+xml" href={Favicon.src} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="bg-base-200 max-w-screen-* overflow-x-hidden">
		<Navigation />
		<slot />
		<Footer />
	</body>
</html>
