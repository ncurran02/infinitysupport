---
import ContactForm from "../components/ContactForm.svelte";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | Infinity Support Services">
    <div class="flex flex-col justify-center text-center h-min-100 m-10">
        <h1 class="text-5xl text-[#116089] font-bold m-5">Contact Us</h1>
        <div class="flex lg:flex-row flex-col justify-center items-center w-[80%] mx-5 my-auto">
            <div class="card bg-white rounded-box grow place-items-center shadow-sm m-5">
                <h3 class="text-3xl text-[#116089] font-semibold mt-5">Send us a message</h3>
                <ContactForm client:load />
            </div>
            <div class="divider mx-5"></div>
            <div class="card rounded-box place-items-center ml-20">
                <div class="flex flex-col justify-center items-center">
                    <div class="my-5">
                        <h3 class="text-2xl text-[#116089] font-semibold">Phone Number</h3>
                        <p class="text-lg">(03) 7067 5201</p>
                    </div>
                    <div class="my-5">
                        <h3 class="text-2xl text-[#116089] font-semibold">Email Address</h3>
                        <p class="text-lg">info@infinitysupportservices.com.au</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>