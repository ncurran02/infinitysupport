---
import ContactForm from "../components/ContactForm.svelte";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | Infinity Support Services">
    <div class="flex flex-col justify-center items-center text-center my-10 mx-auto w-full">
        <h1 class="text-5xl text-[#116089] font-bold my-5">Contact Us</h1>
        <div class="flex flex-col lg:justify-between justify-center items-center mx-auto mt-2.5">
            <div class="card bg-white rounded-box place-items-center shadow-sm py-5 lg:px-25 px-5 mt-5 mb-10 lg:mx-25">
                <div class="flex flex-col justify-center items-center">
                    <div class="my-5">
                        <h3 class="text-2xl text-[#116089] font-semibold">Phone Number</h3>
                        <a href="tel:0370675201" class="text-lg">(03) 7067 5201</a>
                    </div>
                    <div class="my-5">
                        <h3 class="text-2xl text-[#116089] font-semibold">Email Address</h3>
                        <a href="mailto:info@infinitysupportservices.com.au" class="text-lg">info@infinitysupportservices.com.au</a>
                    </div>
                </div>
            </div>
            <div class="divider mx-auto">OR</div>
            <div class="lg:flex flex-col lg:mx-25">
                <h1 class="text-3xl text-[#116089] font-bold my-5">Fill the form below</h1>
                <div class="card bg-white rounded-box grow place-items-center shadow-sm mx-auto lg:p-10 p-5">
                    <h3 class="text-2xl text-[#116089] font-semibold mt-5">Send us a message</h3>
                    <ContactForm client:load />
                </div>
            </div>
        </div>
    </div>
</Layout>