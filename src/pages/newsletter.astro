---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Newsletter | Infinity Support Services">
    <div class="flex flex-col justify-center items-center">
        <h1 class="text-5xl text-[#116089] font-bold m-5 text-center">Latest Newsletter</h1>
        <div class="w-full max-w-4xl mx-auto p-4">
            <div class="aspect-w-1 aspect-h-1 sm:aspect-w-16 sm:aspect-h-9 overflow-hidden border">
                <iframe
                src="/newsletter/Newsletter_20250520.pdf"
                class="w-full lg:h-[100vh] h-[75vh]"
                allowfullscreen
                ></iframe>
            </div>
        </div>
    </div>
</Layout>